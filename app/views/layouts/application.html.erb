<!DOCTYPE html>
<html>
<head>
  <title>ServiceWeb</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %> 
</head>
<body ng-app="app">
  <div id="drawer-contents">
    <div class="container">
      <div class="row">
        <% @unverified_resources.each do |resource| %>
        <div class="col-md-3">
              <div class="thumbnail">
                <div class="caption">
                  <h3><%= resource.name %></h3>
                  <h4><%= resource.street %></h4>
                  <h5><%= resource.city %>, <%= resource.zip_code %></h5>
                  <p>submitted by:</p>
                  <p><%= resource.user.first_name %> <%= resource.user.last_name %></p>
                  <p><%= link_to "Verify", "/resources/#{resource.id}?status=verified", method: :patch, class: "btn btn-success" %> <%= link_to "Delete", "/resources/#{resource.id}?from_unverified_list=true", method: :delete, class: "btn btn-danger" %></p>
                </div>
              </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div id="drawer">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-sm-12">
        <span id="chevron" class="js-drawer-chevron glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
        <% if current_user && @unverified_resources_count > 0 %>
        <span class="badge pulse-button"><%= @unverified_resources_count %> <%= @count_english %> verification.</span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="page-header">
    <div class='btn-toolbar pull-right'>
      <div class='btn-group'>
        <% if current_user %>
        <%= link_to "Sign Out, #{current_user.first_name if current_user.first_name}", "/users/sign_out",  method: :delete, class: 'btn btn-primary' %>
        <% else %>
        <%= link_to "Sign In", "/users/sign_in", class: 'btn btn-primary' %>
        <%= link_to "Create Account", "/users/sign_up", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
    <%= link_to "/home" do %>
    <h1 id="title">ServiceWeb</h1>
    <% end %>
    <h2><small>many resources. one mind.</small></h2>
  </div>
  <% flash.each do |type, message| %>
  <div class="alert alert-<%= type %> alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <strong><%= message %></strong>
  </div>
  <% end %>

  <%= yield %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <% if current_user %>
      <%= link_to 'Add Resource', '/resources/new', class: "btn btn-warning" %>
      <h4>or select icon to search existing resources near you.</h4>
      <% else %> 
      <h4>Select icon to search existing resources near you.</h4>
      <% end %>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-4">
          <a href="/resources?type=food" class="thumbnail main-button">
            <span class="glyphicon glyphicon-apple" aria-hidden="true"></span>
            <div class="caption">
              <h3>Food</h3>
            </div>
          </a>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4">
          <a href="/resources?type=health" class="thumbnail main-button">
            <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
            <div class="caption">
              <h3>Health</h3>
            </div>
          </a>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4">
          <a href="/resources?type=shelter" class="thumbnail main-button">
            <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
            <div class="caption">
              <h3>Shelter</h3>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="footer">
  </div>
</div>
</body>
</html>