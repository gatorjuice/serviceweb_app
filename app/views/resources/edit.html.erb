<%= form_tag "/resources/#{@resource.id}", method: :patch do %>
<div class="form-group">
<%= label_tag(:resource_type, "Resource Type:") %> 
<%= select_tag :resource_type, options_for_select([ "#{@resource.resource_type}", "MasterCard" ], "#{@resource.resource_type}") %>
</div>
<div class="form-group">
<%= label_tag(:name, "name:") %> 
<%= text_field_tag(:name, @resource.name) %>
</div>
<div class="form-group">
<%= label_tag(:address, "Address 1:") %>
<%= text_field_tag(:address, @resource.address) %>
</div>
<div class="form-group">
<%= label_tag(:city, "City:") %> 
<%= text_field_tag(:city, @resource.city) %>
</div>
<div class="form-group">
<%= label_tag(:zip_code, "Zip Code:") %> 
<%= text_field_tag(:zip_code, @resource.zip_code) %>
</div>
<div class="form-group">
<%= label_tag(:phone_number, "Phone:") %> 
<%= text_field_tag(:phone_number, @resource.phone_number) %>
</div>
<div class="form-group">
<%= label_tag(:description, "Description:") %> <%= 
text_field_tag(:description, @resource.description) %>
</div>
<div><%= button_tag("Add") class: "btn btn-info" %><%= link_to "Delete", "/resources/#{@resource.id}", method: :delete, class: "btn btn-warning" %></div>
<% end %>