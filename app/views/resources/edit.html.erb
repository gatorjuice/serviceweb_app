<div class="row">
  <div class="col-xs-6 new-resource-form">
    <%= form_tag "/resources/#{@resource.id}", class: "form-horizontal", method: :patch do %>
    <div class="form-group">
      <%= label_tag :resource_type, "Resource Type:", class: "col-sm-3 control-label" %>
      <label class="checkbox-inline col-sm-2">
        <%= check_box_tag :food, 1, @resource.food ? true : false %> Food
      </label>
      <label class="checkbox-inline col-sm-2">
        <%= check_box_tag :health, 1, @resource.health ? true : false %> Health
      </label>
      <label class="checkbox-inline col-sm-2">
        <%= check_box_tag :shelter, 1, @resource.shelter ? true : false %> Shelter
      </label>
    </div>
    <div class="form-group">   
      <%= label_tag :name, "Name:", class: "col-sm-3 control-label" %> 
      <div class="col-sm-9">
        <%= text_field_tag :name, @resource.name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">   
      <%= label_tag :address, "Address:", class: "col-sm-3 control-label" %> 
      <div class="col-sm-9">
        <%= text_field_tag :address, @resource.address, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">   
      <%= label_tag :city, "City:", class: "col-sm-3 control-label" %> 
      <div class="col-sm-9">
        <%= text_field_tag :city, @resource.city, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">   
      <%= label_tag :zip_code, "Zip Code:", class: "col-sm-3 control-label" %> 
      <div class="col-sm-9">
        <%= text_field_tag :zip_code, @resource.zip_code, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">   
      <%= label_tag :phone, "Phone Number:", class: "col-sm-3 control-label" %> 
      <div class="col-sm-9">
        <%= phone_field_tag :phone, @resource.phone, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">   
      <%= label_tag :description, "Description:", class: "col-sm-3 control-label" %> 
      <div class="col-sm-9">
        <%= text_area_tag :description, @resource.description, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-6"></div>
      <%= submit_tag "Update", class: "btn btn-info" %>
      <%= link_to "Delete", "/resources/#{@resource.id}", method: :delete, class: "btn btn-danger" %>
    </div>
    <% end %>
  </div>
</div>