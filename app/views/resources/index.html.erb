<h2>List All Resources</h2>
<table style="width:100%">
  <tr>
    <th>Services</th>
    <th>Resource Name</th>
    <th>Address</th>
    <th>City</th>
    <th>Zip Code</th>
    <th>Phone Number</th>
  </tr>
  <% @resources.each do |resource| %>
  <tr>
    <td>
      <%= link_to "/resources/#{resource.id}" do %>
      <%= resource.name %>
      <% end %>
    </td>
    <td><%= resource.display_resources %>
    <td><%= resource.address %></td>
    <td><%= resource.city %></td>
    <td><%= resource.zip_code %></td>
    <td><%= resource.phone %></td>
  </tr>    
  <% end %>
</table>