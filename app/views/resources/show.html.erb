<div class="row show-row container">
  <div class="col-md-6">
    <h2><%= @resource.name %></h2>
    <p>Address: <%= @resource.address %></p>
    <p>Phone: <%= @resource.phone_with_dashes %></p>
    <p>Description: <%= @resource.description %></p>
    <%= link_to "Share Resource", "/resources/#{@resource.id}/share", class: "btn btn-success" %>
    <%= link_to "Edit Resource", "/resources/#{@resource.id}/edit", class: "btn btn-info"  %> 

    <div class="comments-section" ng-controller="comments" ng-init="setup()">
      <div class="col-xs-12 comments-section">
        <div class="form-group">
        <textarea ng-model="newCommentBody" type="text" class="form-control" placeholder="comments should be constructive and thoughtful"></textarea>
          <%= text_area_tag :comment_input_body, nil, placeholder: "Add a comment", class: "form-control" %>
        </div>
        <div class="form-group">
          <button ng-click="submitComment(newCommentBody, <%= @resource.id %>, <%= current_user.id if current_user %>)" class="btn btn-default">Post Comment</button>
        </div>
      </div>

      <div class="comment">
        <div class="row" ng-repeat="comment in comments | filter:{ resource_id: <%= @resource.id %> }">
          <div class="col-xs-1 thumbs">
            <span ng-click="upvote(comment)" class="js-thumbs-up glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>
            <p ng-model="score" class="votes-total">{{ comment.score }}</p>
            <span ng-click="downvote(comment)" class="js-thumbs-down glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>
          </div>
          <div class="col-xs-8">
            <h5>{{ comment.user_first_name }} said on {{ comment.created_at | date:'medium' }}</h5>
            <p>{{ comment.body }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6" class="map-container">
    <iframe width="100%" height="450" frameborder="0" style="border:0" src=<%= "https://www.google.com/maps/embed/v1/view?zoom=16&center=#{@resource.latitude}%2C#{@resource.longitude}&key=#{open('lib/assets/.google_api_key').read()}" %> allowfullscreen></iframe>
  </div>
</div>